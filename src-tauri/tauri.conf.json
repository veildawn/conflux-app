{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Conflux",
  "version": "0.3.7",
  "identifier": "com.conflux.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Conflux",
        "width": 914,
        "height": 760,
        "minWidth": 914,
        "minHeight": 760,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/sub-store", "resources/geodata"],
    "externalBin": ["binaries/node", "binaries/mihomo"],
    "category": "Utility",
    "shortDescription": "汇流 - 现代化代理管理桌面应用",
    "longDescription": "Conflux 汇流是一个基于 Tauri 2 + MiHomo 的现代化跨平台代理管理桌面应用",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
