{
  "$schema": "https://schema.tauri.app/config/2",
  "app": {
    "windows": [
      {
        "title": "Conflux",
        "width": 960,
        "height": 780,
        "minWidth": 960,
        "minHeight": 780,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": true
      }
    ]
  },
  "bundle": {
    "targets": ["nsis"],
    "icon": [
      "icons/32x32-win.png",
      "icons/128x128-win.png",
      "icons/256x256-win.png",
      "icons/icon-win.ico"
    ],
    "resources": ["resources/sub-store"],
    "externalBin": ["binaries/node", "binaries/mihomo", "binaries/conflux-service"],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "nsis": {
        "languages": ["SimpChinese", "English"],
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon-win.ico",
        "headerImage": "icons/icon-win.ico"
      }
    }
  }
}
