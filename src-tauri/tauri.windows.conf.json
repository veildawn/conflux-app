{
  "$schema": "https://schema.tauri.app/config/2",
  "app": {
    "windows": [
      {
        "title": "Conflux",
        "width": 960,
        "height": 720,
        "minWidth": 960,
        "minHeight": 720,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": true
      }
    ]
  },
  "bundle": {
    "targets": ["nsis"],
    "resources": [
      "resources/mihomo-*",
      "resources/sub-store"
    ],
    "externalBin": [
      "binaries/node"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "nsis": {
        "languages": ["SimpChinese", "English"],
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/icon.ico"
      }
    }
  }
}
