{
  "$schema": "https://schema.tauri.app/config/2",
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Conflux",
        "width": 1080,
        "height": 810,
        "minWidth": 1080,
        "minHeight": 810,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ]
  },
  "bundle": {
    "targets": ["dmg"],
    "resources": ["resources/sub-store"],
    "externalBin": ["binaries/node", "binaries/mihomo"],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "frameworks": [],
      "entitlements": null,
      "exceptionDomain": null,
      "signingIdentity": null,
      "providerShortName": null
    }
  }
}
